{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "target": "esNext",
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": "src"
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
