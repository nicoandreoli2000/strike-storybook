{
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "target": "esNext",
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": "src"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
